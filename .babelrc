{
  "presets": ["@babel/preset-env", "@babel/preset-typescript"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@main/*": "./src/main/",
          "@tools/*": "./src/tools/",
          "@helpers/*": "./src/api/helpers/"
        }
      }
    ]
  ]
}
